<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    tools:context=".fragment.MenuFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/liveTv"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/live_tv"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <ImageView
                android:id="@+id/epg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/epg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <ImageView
                android:id="@+id/catchup"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/catchup"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <ImageView
                android:id="@+id/match_center"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/match_center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <ImageView
                android:id="@+id/vod"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/vod"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <ImageView
                android:id="@+id/setting"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/settings"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

        </LinearLayout>
    </ScrollView>


</FrameLayout>