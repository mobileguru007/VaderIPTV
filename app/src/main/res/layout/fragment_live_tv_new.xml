<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.LiveTvFragment"
    android:background="@drawable/background">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/livetv_main_layout"
        android:background="@color/colorPrimaryDark"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <FrameLayout
            android:id="@+id/livetv_frameLayout"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <ProgressBar android:layout_gravity="center"
                android:id="@+id/loading"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/spinner"
                style="?android:progressBarStyleLarge" />
    </FrameLayout>
    </android.support.design.widget.CoordinatorLayout>
    <FrameLayout
        android:id="@+id/live_tv_main_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:gravity="bottom"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:animateLayoutChanges="true">
            <zhe.it_tech613.com.vaderiptv.decompile.LiveTvWrappedScrollView
                android:id="@id/livetv_categories_drawer_list"
                android:background="@drawable/livetv_scroller_background"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="@dimen/livetv_category_width"
                android:layout_height="fill_parent"
                android:baselineAligned="false"
                android:alpha="0.8"
                app:layoutManager="LinearLayoutManager"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" />
            <zhe.it_tech613.com.vaderiptv.decompile.LiveTvWrappedScrollView
                android:id="@id/livetv_channel_drawer_list"
                android:background="@drawable/livetv_scroller_background"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="@dimen/livetv_channel_width"
                android:layout_height="fill_parent"
                android:baselineAligned="false"
                android:alpha="0.8"
                app:layoutManager="LinearLayoutManager"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:id="@+id/live_tv_information_bar"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="140.0dip"
            android:layout_marginBottom="20.0dip"
            xmlns:fresco="http://schemas.android.com/apk/res-auto">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/live_tv_information_bar_category"
                android:background="@color/epg_channel_timebar_background"
                android:layout_width="@dimen/livetv_channel_width"
                android:layout_height="@dimen/livetv_channel_item_height">
                <TextView
                    android:textAppearance="?textAppearanceListItem"
                    android:textSize="24.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/livetv_category_text"
                    android:ellipsize="end"
                    android:id="@+id/infobar_category_name"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4.0dip"
                    android:maxLines="1"
                    android:layout_weight="9.0"
                    android:alpha="1.0"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/live_tv_information_bar_channel"
                android:background="@color/epg_channel_timebar_background"
                android:layout_width="@dimen/livetv_channel_width"
                android:layout_height="@dimen/livetv_channel_item_height">
                <ImageView
                    android:id="@+id/infobar_navigation_arrow"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:tint="@color/livetv_category_text"
                    android:layout_weight="1.0" />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@id/infobar_channel_icon"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_margin="5.0dip"
                    android:scaleType="fitCenter"
                    android:layout_weight="5.0"
                    fresco:actualImageScaleType="fitCenter"
                    fresco:failureImage="@drawable/television"
                    fresco:progressBarAutoRotateInterval="1000"
                    fresco:progressBarImage="@android:drawable/ic_input_get"
                    fresco:progressBarImageScaleType="centerInside" />
                <TextView
                    android:textSize="30.0dip"
                    android:textStyle="bold"
                    android:textColor="@color/livetv_category_text"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/infobar_channel_number"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:layout_weight="4.0" />
            </LinearLayout>
            <LinearLayout
                android:gravity="start"
                android:orientation="vertical"
                android:id="@+id/live_tv_information_bar_info"
                android:background="@color/epg_channel_timebar_background"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:textSize="30.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/livetv_category_text"
                    android:id="@+id/live_tv_information_bar_info_chanName"
                    android:paddingLeft="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:textAlignment="viewStart" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/epg_channel_timebar_background"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <LinearLayout
                        android:gravity="start"
                        android:orientation="vertical"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="9.0">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0.0dip"
                            android:layout_margin="2.0dip"
                            android:layout_weight="1.0">
                            <TextView
                                android:textSize="20.0sp"
                                android:textColor="@color/livetv_category_text"
                                android:ellipsize="end"
                                android:layout_gravity="start"
                                android:id="@+id/live_tv_information_bar_info_progName"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0.0dip"
                            android:layout_margin="4.0dip"
                            android:layout_weight="1.0">
                            <TextView
                                android:textSize="16.0sp"
                                android:textColor="@color/livetv_category_text"
                                android:id="@+id/live_tv_information_bar_info_startTime"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:textAlignment="viewStart" />
                            <ProgressBar
                                android:layout_gravity="center"
                                android:id="@+id/live_tv_information_bar_info_progress"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_margin="5.0dip"
                                android:max="100"
                                android:progress="50"
                                android:minWidth="400.0dip"
                                android:layout_weight="6.0"
                                style="?android:progressBarStyleHorizontal" />
                            <TextView
                                android:textSize="16.0sp"
                                android:textColor="@color/livetv_category_text"
                                android:id="@+id/live_tv_information_bar_info_endTime"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:textAlignment="viewEnd" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0.0dip"
                            android:layout_margin="2.0dip"
                            android:layout_weight="1.0">
                            <TextView
                                android:textSize="18.0sp"
                                android:textStyle="bold|italic"
                                android:textColor="@color/list_item_selected"
                                android:ellipsize="end"
                                android:layout_gravity="start"
                                android:id="@+id/live_tv_information_bar_info_group"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="2.0">
                        <TextClock
                            android:textSize="18.0sp"
                            android:textStyle="bold"
                            android:textColor="@color/livetv_category_text"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:textAlignment="center"
                            android:format12Hour="hh:mm" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/infobar_info_navigation_arrow"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:tint="@color/livetv_category_text"
                        android:layout_weight="1.0" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/live_tv_catchup_container"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <include layout="@layout/fragment_catch_up" />
    </LinearLayout>

    <!--<zhe.it_tech613.com.vaderiptv.decompile.WrappedScrollView-->
        <!--android:id="@+id/category_list"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentBottom="true"/>-->
    <!--<zhe.it_tech613.com.vaderiptv.decompile.WrappedScrollView-->
        <!--android:id="@+id/channel_list"-->
        <!--android:layout_toEndOf="@id/category_list"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentBottom="true"/>-->
    <LinearLayout
        android:id="@+id/lay_0"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/black">
        <TextView
            android:id="@+id/large_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            tools:ignore="RtlSymmetry"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay_1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/lay_0"
        android:orientation="horizontal"
        android:background="@color/black">
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/arrow"
            android:layout_gravity="center_vertical"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/custom_progressbar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/channel_icon"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/television"
                android:layout_gravity="center_vertical"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/large_channel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLength="10"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            tools:ignore="RtlSymmetry"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/lay_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/lay_1"
        android:padding="10dp"
        android:background="@color/black">
        <TextView
            android:id="@+id/channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Channel Name"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/program_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Program Name"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_below="@id/channel_name"/>
        <LinearLayout
            android:id="@+id/lay_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/program_name">
            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:text="start_time"
                android:layout_marginEnd="20dp"/>
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/progress"
                android:layout_gravity="center_vertical"
                android:max="100"
                android:progress="45"
                android:progressBackgroundTint="@color/white"
                android:layout_marginEnd="20dp"
                tools:targetApi="lollipop" />
            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:textColor="@color/white"
                android:text="end time"/>
            <TextView
                android:id="@+id/now_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_marginEnd="20dp"
                android:text="now time"/>
            <ImageView
                android:id="@+id/play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow"
                android:layout_marginEnd="15dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/button_red"
            android:textSize="15sp"
            android:text="Category Name"
            android:layout_marginBottom="25dp"
            android:layout_below="@+id/lay_media"/>

    </RelativeLayout>
</FrameLayout>